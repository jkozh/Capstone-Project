<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8253d7"
    android:padding="16dp"
    android:id="@+id/ll0"
    tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="40px"
                android:text="YOU"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="40px"
                android:text="TIME"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="40px"
                android:text="OPPONENT"/>
        </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:layout_alignParentStart="true"
            android:textSize="70px"
            android:textStyle="bold"
            android:text="10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:textSize="70px"
            android:textStyle="bold"
            android:text="2:55"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorAccent"
            android:textSize="70px"
            android:textStyle="bold"
            android:text="12"/>
    </RelativeLayout>

        <!-- Chips View -->
        <android.support.design.chip.ChipGroup
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/chip_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="80px"/>


        <!-- Layout for 2 rows of tiles -->
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv1"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_1"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_1"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv2"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_2"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_2"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv3"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_3"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_3"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv4"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_4"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_4"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/cv5"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_5"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_5"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv6"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_6"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_6"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cv7"
                    style="@style/TileCardView">

                    <RelativeLayout
                        android:id="@+id/rl7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/score_tv_7"
                            style="@style/ScoreTileCardView"/>

                        <TextView
                            android:id="@+id/letter_tv_7"
                            style="@style/LetterTileCardView"/>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SEND"/>

</LinearLayout>